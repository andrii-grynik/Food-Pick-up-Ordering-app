      </div>
      <a href="#" class="signup-btn"><div id="cart-icon">
        <i class="fa-solid fa-bag-shopping"></i>
      </div></a>
    </nav>

    <!-- Food menus html -->
    <section class="food-menus">
      <h2 class="menu-logo">Menus</h2>
    <div class="food-images">
      <a href="#menu1" class="food-item">
        <img class="specials" src="https://cdn.discordapp.com/attachments/1073664859222319154/1075652102715605132/first.jpg">
      </a>
      <a href="#menu2" class="food-item">
        <img class="dinner" src="https://cdn.discordapp.com/attachments/1073664859222319154/1075652103000821760/middle.jpg">
      </a>
      <a href="#menu3" class="food-item">
        <img class="breakfast" src="https://images.unsplash.com/photo-1567620905732-2d1ec7ab7445?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=780&q=80" >
      </a>
    </div>
      <div id="menu1" class="menu">
        <h3 class="menu-header">Specials</h3>
        <div class="grid-container">
          <% menuItems.forEach((menuItem) => { %>
            <div class="product-box">
              <h2 class="product-title">
                <%= menuItem.item_name %>
              </h2>
              <p class="product-description">
                <%= menuItem.description %>
              </p>
              <span class="product-price">
                <%= menuItem.price %>
              </span>
              <i class="fa-solid fa-bag-shopping add-cart"></i>
            </div>
          <% }) %>
        </div>
      </div>
      <div id="menu2" class="menu">
        <h3 class="menu-header">Dinner</h3>
        <div class="grid-container">
          <% menuItems.forEach((menuItem) => { %>
            <div class="product-box">
              <h2 class="product-title">
                <%= menuItem.item_name %>
              </h2>
              <p class="product-description">
                <%= menuItem.description %>
              </p>
              <span class="product-price">
                <%= menuItem.price %>
              </span>
              <i class="fa-solid fa-bag-shopping add-cart"></i>
            </div>
          <% }) %>
        </div>
      </div>
      <div id="menu3" class="menu">
        <h3 class="menu-header">Lunch</h3>
        <div class="grid-container">
          <% menuItems.forEach((menuItem) => { %>
            <div class="product-box">
              <h2 class="product-title">
                <%= menuItem.item_name %>
              </h2>
              <p class="product-description">
                <%= menuItem.description %>
              </p>
              <span class="product-price">
                <%= menuItem.price %>
              </span>
              <i class="fa-solid fa-bag-shopping add-cart"></i>
            </div>
          <% }) %>
        </div>
      </div>
    </section>

    <!-- Pepsi Ad -->
    <section class="pepsi-ad">
      <div class="card">
        <div class="circle"></div>
        <div class="content">
          <h2>Pepsi</h2>
          <h3>Sponsored</h3>
          <p>
            Looking for a refreshing drink that packs a punch? Look no further than Pepsi, with its bold and
            irresistible flavor that's perfect for any occasion. Try a cold and crisp Pepsi today and experience the ultimate refreshment.
          </p>
          <a href="#">Buy Now</a>
        </div>
        <img src="https://www.pepsi.com/en-us/uploads/images/can-pzs.png" alt="" />
      </div>
      <div class="discount">
        <h2>Pepsi!</h2>
        <p>free with every order over 20$!</p>
      </div>
    </section>


    <!-- cart -->
    <div class="cart">
      <h2 class="cart-title">Your Cart</h2>
      <!-- cart content -->
      <div class="cart-content">
        <!-- remove cart -->
      </div>
      <!-- total -->
      <div class="total">
        <div class="total-title"></div>
        <div class="total-price">$0</div>
      </div>
      <!-- buy button -->
      <button type="button" class="button-buy">Buy Now</button>
      <!-- cart close -->
      <i class="fa-solid fa-x" id="cart-close"></i>
    </div>

    <section class="about">
      <h3>About Us</h3>
      <p>Wok and Roll is a family-owned Asian restaurant that has been serving fresh and delicious Chinese, Japanese, and Thai cuisine since 2005. We are committed to using only the freshest ingredients and preparing our dishes with care and attention to detail. </p>
      <p>Our menu includes a variety of appetizers, entrees, and desserts, as well as vegetarian and gluten-free options. We also offer catering services for events of all sizes. </p>
      <p>At Wok and Roll, we strive to provide our customers with a friendly and welcoming atmosphere, as well as exceptional food and service. We look forward to serving you soon!</p>
    </section>
    <!-- Footer -->
    <footer>
      <div class="footer-container">
        <div class="footer-logo">
          <img src="https://i.pinimg.com/564x/db/63/df/db63dfb015cec41306deee05c762d2a0.jpg" alt="Logo">
          <h3>Wok & Roll</h3>
        </div>
        <div class="footer-nav">
          <ul>
            <li><a href="#">Home</a></li>
